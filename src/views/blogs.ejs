<div class="page__wrapper">
  <%- include('./partials/header.ejs', {title: 'Blogs', user: locals.user}) %>

<div class="blogs__container">
  <h3>All Blogs (<%= locals.blogs.length %>)</h3>
  <div class="blogs">
    <% locals.blogs.forEach(blog => { %>
      <div class="blog">
        <form action="/bookmarks" method="post" class="book__form__2" title="Bookmark">
          <input type="hidden" name="blogId" value="<%= blog._id %>" />
          <button type="submit" ><i class="fa-solid fa-bookmark"></i></button>
        </form>
        <img src="<%= blog.thumbnail %>" alt="thumbnail"/>
        <small class="category"><%= blog.category %></small>
        <h4><%= blog.title %></h4>
        <small class="author"><strong>Author :</strong> <%= blog.author.name %></small>
        <a href="/blogs/<%= blog._id%>">Read Blog</a>
        <small>Posted on : <%= new Date(blog.createdAt).toLocaleString() %></small>
      </div>
      <% }); %>
  </div>
</div>


<%- include('./partials/footer.ejs') %>

</div>